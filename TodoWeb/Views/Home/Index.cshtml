@model Todo.Model.UserTodo
@{
    ViewData["Title"] = "todo";
}
<h2>Todo List</h2>
<p>
    <a id="btnAdd" asp-action="Add">Add New</a>
</p>
<input type="hidden" value="@Model.UserId" />
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Title
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/js/main.js"></script>
